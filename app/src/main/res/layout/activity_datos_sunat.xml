<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título -->
        <TextView
            android:text="Configuración SUNAT"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#F8FAFC"
            android:layout_marginBottom="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Usuario SOL -->
        <EditText
            android:id="@+id/etUsuarioSOL"
            style="@style/InputBox"
            android:hint="Usuario SOL"
            android:layout_marginBottom="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Clave SOL -->
        <EditText
            android:id="@+id/etClaveSOL"
            style="@style/InputBox"
            android:hint="Clave SOL"
            android:inputType="textPassword"
            android:layout_marginBottom="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Client ID -->
        <EditText
            android:id="@+id/etClientID"
            style="@style/InputBox"
            android:hint="Client ID"
            android:layout_marginBottom="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Client Secret -->
        <EditText
            android:id="@+id/etClientSecret"
            style="@style/InputBox"
            android:hint="Client Secret"
            android:inputType="textPassword"
            android:layout_marginBottom="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Clave Certificado -->
        <EditText
            android:id="@+id/etClaveCertificado"
            style="@style/InputBox"
            android:hint="Clave Certificado (.pfx)"
            android:layout_marginBottom="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Modo -->
        <Spinner
            android:id="@+id/spinnerModoEnvio"
            android:background="@drawable/spinner_bg"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:minHeight="48dp"
            android:layout_marginBottom="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Endpoint -->
        <EditText
            android:id="@+id/etEndpointSunat"
            style="@style/InputBox"
            android:hint="Endpoint SUNAT"
            android:layout_marginBottom="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Botón seleccionar certificado -->
        <Button
            android:id="@+id/btnSeleccionarCertificado"
            android:text="Seleccionar Certificado (.pfx)"
            android:backgroundTint="#334155"
            android:textColor="#F8FAFC"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:layout_marginBottom="12dp" />

        <!-- Botón guardar configuración -->
        <Button
            android:id="@+id/btnGuardarSunat"
            android:text="Guardar Configuración"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3B82F6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp" />

        <!-- Indicador de carga -->
        <ProgressBar
            android:id="@+id/progressSunat"
            android:visibility="gone"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center" />

    </LinearLayout>
</ScrollView>
