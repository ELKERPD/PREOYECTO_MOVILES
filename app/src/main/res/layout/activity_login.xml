<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#0F172A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Espaciador superior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <!-- Logo circular -->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#1E293B">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_dialog_info"
                android:tint="#3B82F6"
                android:contentDescription="Logo de la aplicación" />
        </androidx.cardview.widget.CardView>

        <!-- Título principal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido de nuevo"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#F8FAFC"
            android:layout_marginTop="24dp" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresa tus credenciales para continuar"
            android:textSize="14sp"
            android:textColor="#94A3B8"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="28dp" />

        <!-- Contenedor principal -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#1E293B">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Campo Usuario -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario"
                    android:textColor="#94A3B8"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_input_box">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_edit"
                        android:tint="#64748B" />

                    <EditText
                        android:id="@+id/etUsuario"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:hint="Ingresa tu usuario"
                        android:textColorHint="#475569"
                        android:textColor="#F8FAFC"
                        android:textSize="16sp"
                        android:background="@android:color/transparent"
                        android:inputType="textPersonName"
                        android:importantForAutofill="yes" />
                </LinearLayout>

                <!-- Campo Contraseña -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contraseña"
                    android:textColor="#94A3B8"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_input_box">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_lock_idle_lock"
                        android:tint="#64748B" />

                    <EditText
                        android:id="@+id/etContrasena"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:hint="Ingresa tu contraseña"
                        android:textColorHint="#475569"
                        android:textColor="#F8FAFC"
                        android:textSize="16sp"
                        android:background="@android:color/transparent"
                        android:inputType="textPassword" />
                </LinearLayout>

                <!-- Campo Token oculto -->
                <EditText
                    android:id="@+id/etToken"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    android:text="1234567890" />

                <!-- Botón Iniciar Sesión -->
                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Iniciar Sesión"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#3B82F6"
                    android:drawableEnd="@android:drawable/ic_media_play"
                    android:drawableTint="#FFFFFF"
                    android:layout_marginTop="28dp"
                    android:elevation="4dp" />

                <!-- Mensaje de estado -->
                <TextView
                    android:id="@+id/tvMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:padding="12dp"
                    android:layout_marginTop="16dp"
                    android:textColor="#F8FAFC"
                    android:visibility="gone" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Separador con "o" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#334155" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="o"
                android:textColor="#64748B"
                android:textSize="12sp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#334155" />
        </LinearLayout>

        <!-- Enlace ayuda -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Olvidaste tu contraseña?"
            android:textColor="#3B82F6"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp" />

        <!-- Pie de página -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© 2025 Tu Empresa. Todos los derechos reservados."
            android:textColor="#475569"
            android:textSize="11sp"
            android:layout_marginTop="32dp"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>
