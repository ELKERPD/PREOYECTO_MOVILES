<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="#101418"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvBienvenida"
        android:text="Bienvenido"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:layout_marginBottom="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:padding="22dp"
        app:cardBackgroundColor="#1E242A">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDatosEmpresa"
                android:text="Datos Empresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="#FFFFFF"
                app:backgroundTint="#2ECC71" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDatosSunat"
                android:text="Datos Sunat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="#FFFFFF"
                app:backgroundTint="#27AE60" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAuditorias"
                android:text="AuditorÃ­as"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="#FFFFFF"
                app:backgroundTint="#1F8A52" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProductos"
                android:text="Productos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="#FFFFFF"
                app:backgroundTint="#23B15D" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCotizaciones"
                android:text="cotizaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="#FFFFFF"
                app:backgroundTint="#23B15D" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
