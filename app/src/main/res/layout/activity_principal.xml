<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#0F1419">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:drawable/dialog_holo_dark_frame"
            android:backgroundTint="#1A1F26"
            android:padding="24dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textColor="#7F8C9A"
                android:textSize="14sp"
                android:textStyle="bold"
                android:letterSpacing="0.1" />

            <TextView
                android:id="@+id/tvBienvenida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido, Usuario"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:letterSpacing="0.02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestiona tu sistema empresarial"
                android:textColor="#7F8C9A"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Grid de Módulos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MÓDULOS PRINCIPALES"
            android:textColor="#7F8C9A"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.15"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="4dp" />

        <!-- Primera Fila -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="16dp">

            <!-- Datos Empresa -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#1E242A">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDatosEmpresa"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@android:drawable/ic_menu_myplaces"
                        android:contentDescription="Abrir módulo de Empresas"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="28dp"
                        app:iconTint="#FFFFFF"
                        app:cornerRadius="28dp"
                        app:backgroundTint="#2ECC71"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Datos"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Empresa"
                        android:textColor="#7F8C9A"
                        android:textSize="12sp"
                        android:gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Datos Sunat -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#1E242A">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDatosSunat"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@android:drawable/ic_menu_info_details"
                        app:iconGravity="textStart"
                        android:contentDescription="Abrir módulo de Sunat"
                        app:iconPadding="0dp"
                        app:iconSize="28dp"
                        app:iconTint="#FFFFFF"
                        app:cornerRadius="28dp"
                        app:backgroundTint="#3498DB"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Datos"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUNAT"
                        android:textColor="#7F8C9A"
                        android:textSize="12sp"
                        android:gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Auditorías -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#1E242A">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAuditorias"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@android:drawable/ic_menu_view"
                        app:iconGravity="textStart"
                        android:contentDescription="Abrir módulo de Auditorías"
                        app:iconPadding="0dp"
                        app:iconSize="28dp"
                        app:iconTint="#FFFFFF"
                        app:cornerRadius="28dp"
                        app:backgroundTint="#9B59B6"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auditorías"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Historial"
                        android:textColor="#7F8C9A"
                        android:textSize="12sp"
                        android:gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Segunda Fila -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="16dp">

            <!-- Productos -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#1E242A">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnProductos"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@android:drawable/ic_menu_gallery"
                        app:iconGravity="textStart"
                        android:contentDescription="Abrir módulo de Productos"
                        app:iconPadding="0dp"
                        app:iconSize="28dp"
                        app:iconTint="#FFFFFF"
                        app:cornerRadius="28dp"
                        app:backgroundTint="#E67E22"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Productos"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inventario"
                        android:textColor="#7F8C9A"
                        android:textSize="12sp"
                        android:gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Cotizaciones -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#1E242A">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCotizaciones"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@android:drawable/ic_menu_edit"
                        app:iconGravity="textStart"
                        android:contentDescription="Abrir módulo de Cotizaciones"
                        app:iconPadding="0dp"
                        app:iconSize="28dp"
                        app:iconTint="#FFFFFF"
                        app:cornerRadius="28dp"
                        app:backgroundTint="#F39C12"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cotizaciones"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Presupuestos"
                        android:textColor="#7F8C9A"
                        android:textSize="12sp"
                        android:gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- NUEVO: Inventario Cotizaciones -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#1E242A">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnInventarioCotizaciones"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@android:drawable/ic_menu_agenda"
                        app:iconGravity="textStart"
                        android:contentDescription="Abrir inventario de cotizaciones"
                        app:iconPadding="0dp"
                        app:iconSize="28dp"
                        app:iconTint="#FFFFFF"
                        app:cornerRadius="28dp"
                        app:backgroundTint="#E74C3C"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inventario"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cotizaciones"
                        android:textColor="#7F8C9A"
                        android:textSize="12sp"
                        android:gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <!--tersera fila -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="16dp">
        <!-- VENTAS -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#1E242A">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVentas"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:icon="@android:drawable/ic_menu_send"
                    app:iconGravity="textStart"
                    android:contentDescription="Abrir módulo de Ventas"
                    app:iconPadding="0dp"
                    app:iconSize="28dp"
                    app:iconTint="#FFFFFF"
                    app:cornerRadius="28dp"
                    app:backgroundTint="#27AE60"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ventas"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facturación"
                    android:textColor="#7F8C9A"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#1E242A">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnInventario"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@android:drawable/ic_menu_sort_by_size"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="28dp"
                        app:iconTint="#FFFFFF"
                        app:cornerRadius="28dp"
                        app:backgroundTint="#2980B9"
                        android:contentDescription="Ir al módulo de Inventario"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inventario"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Productos"
                        android:textColor="#7F8C9A"
                        android:textSize="12sp"
                        android:gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#1E242A">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnInventarioFacturas"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@android:drawable/ic_menu_agenda"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="28dp"
                        app:iconTint="#FFFFFF"
                        app:cornerRadius="28dp"
                        app:backgroundTint="#8E44AD"
                        android:contentDescription="Inventario de Facturas"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inventario"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facturas"
                        android:textColor="#7F8C9A"
                        android:textSize="12sp"
                        android:gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginBottom="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#1E242A">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnIA"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:icon="@android:drawable/ic_dialog_info"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="28dp"
                    app:iconTint="#FFFFFF"
                    app:cornerRadius="28dp"
                    app:backgroundTint="#9B59B6"
                    android:contentDescription="Inteligencia Artificial"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IA"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asistente"
                    android:textColor="#7F8C9A"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


        <!-- Sección de Información Adicional -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#1E242A">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_dialog_info"
                    app:tint="#3498DB"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sistema ERP"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Todos los módulos activos y disponibles"
                        android:textColor="#7F8C9A"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>