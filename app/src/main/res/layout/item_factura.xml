<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#FFFFFF">

        <!-- Número de Factura -->
        <TextView
            android:id="@+id/tvNumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FACT-000001"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#007BFF"
            android:layout_marginBottom="4dp" />

        <!-- Cliente -->
        <TextView
            android:id="@+id/tvCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Razón Social del Cliente"
            android:textSize="14sp"
            android:textColor="#212529"
            android:layout_marginBottom="4dp" />

        <!-- RUC -->
        <TextView
            android:id="@+id/tvRuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RUC: 20123456789"
            android:textSize="12sp"
            android:textColor="#6C757D"
            android:layout_marginBottom="8dp" />

        <!-- Fecha y Total -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha Emisión"
                    android:textSize="11sp"
                    android:textColor="#6C757D" />

                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2024-12-09"
                    android:textSize="13sp"
                    android:textColor="#495057"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textSize="11sp"
                    android:textColor="#6C757D" />

                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PEN 1,500.00"
                    android:textSize="16sp"
                    android:textColor="#28A745"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado: "
                android:textSize="13sp"
                android:textColor="#495057" />

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PENDIENTE"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#FFA500"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_estado_rounded" />
        </LinearLayout>

        <!-- Botones de Acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnVerPdf"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Ver PDF"
                android:textSize="13sp"
                android:backgroundTint="#007BFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnCambiarEstado"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Cambiar Estado"
                android:textSize="13sp"
                android:backgroundTint="#6C757D"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>