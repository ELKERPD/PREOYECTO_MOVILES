<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Datos de la Empresa"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#F1F5F9"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ProgressBar
            android:id="@+id/progressEmpresa"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etRuc"
            style="@style/InputBox"
            android:hint="RUC"
            android:inputType="number"
            android:maxLength="11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etRazonSocial"
            style="@style/InputBox"
            android:hint="Razón Social"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etNombreComercial"
            style="@style/InputBox"
            android:hint="Nombre Comercial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etCorreo"
            style="@style/InputBox"
            android:hint="Correo"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etDireccion"
            style="@style/InputBox"
            android:hint="Dirección"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etCelular"
            style="@style/InputBox"
            android:hint="Celular"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etIgv"
            style="@style/InputBox"
            android:hint="IGV (Ej: 18)"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"/>

        <Button
            android:id="@+id/btnGuardarEmpresa"
            android:text="Guardar Cambios"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3B82F6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:layout_marginTop="6dp"/>

    </LinearLayout>
</ScrollView>
