<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0F1419">

    <!-- Header -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#1A1F26"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVolver"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Volver"
                    android:padding="0dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:icon="@android:drawable/ic_menu_revert"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="20dp"
                    app:iconTint="#FFFFFF"
                    app:cornerRadius="24dp"
                    app:backgroundTint="#2C3139"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Datos de la Empresa"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvIdEmpresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: 1"
                    android:textColor="#7F8C9A"
                    android:textSize="12sp"
                    android:background="@android:drawable/dialog_holo_dark_frame"
                    android:backgroundTint="#2C3139"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información general y configuración"
                android:textColor="#7F8C9A"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="56dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Contenedor Principal -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- ScrollView con datos -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Información del Estado -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#1E242A">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_dialog_info"
                            app:tint="#2ECC71"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estado de la Cuenta"
                                android:textColor="#7F8C9A"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvEstado"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="✓ ACTIVA"
                                android:textColor="#2ECC71"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- DATOS EDITABLES -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INFORMACIÓN BÁSICA"
                    android:textColor="#7F8C9A"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.15"
                    android:layout_marginBottom="12dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#1E242A">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- RUC -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RUC"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etRuc"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="16dp"
                            android:background="@android:drawable/edit_text"
                            android:backgroundTint="#2C3139"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:hint="Ingrese RUC"
                            android:textColorHint="#7F8C9A"
                            android:inputType="number"
                            android:maxLength="11" />

                        <!-- Razón Social -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Razón Social"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etRazonSocial"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="16dp"
                            android:background="@android:drawable/edit_text"
                            android:backgroundTint="#2C3139"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:hint="Razón social de la empresa"
                            android:textColorHint="#7F8C9A"
                            android:inputType="textCapWords" />

                        <!-- Nombre Comercial -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre Comercial"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etNombreComercial"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="16dp"
                            android:background="@android:drawable/edit_text"
                            android:backgroundTint="#2C3139"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:hint="Nombre comercial"
                            android:textColorHint="#7F8C9A"
                            android:inputType="textCapWords" />

                        <!-- Nombres Representante -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombres del Representante"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etNombres"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="16dp"
                            android:background="@android:drawable/edit_text"
                            android:backgroundTint="#2C3139"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:hint="Nombres"
                            android:textColorHint="#7F8C9A"
                            android:inputType="textCapWords" />

                        <!-- Apellidos -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apellidos"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etApellidos"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="16dp"
                            android:background="@android:drawable/edit_text"
                            android:backgroundTint="#2C3139"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:hint="Apellidos"
                            android:textColorHint="#7F8C9A"
                            android:inputType="textCapWords" />

                        <!-- Correo -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Correo Electrónico"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etCorreo"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="16dp"
                            android:background="@android:drawable/edit_text"
                            android:backgroundTint="#2C3139"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:hint="correo@empresa.com"
                            android:textColorHint="#7F8C9A"
                            android:inputType="textEmailAddress" />

                        <!-- Dirección -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dirección"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etDireccion"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="16dp"
                            android:background="@android:drawable/edit_text"
                            android:backgroundTint="#2C3139"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:hint="Dirección fiscal"
                            android:textColorHint="#7F8C9A"
                            android:inputType="textCapSentences" />

                        <!-- Celular -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Celular"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etCelular"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="16dp"
                            android:background="@android:drawable/edit_text"
                            android:backgroundTint="#2C3139"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:hint="999999999"
                            android:textColorHint="#7F8C9A"
                            android:inputType="phone"
                            android:maxLength="15" />

                        <!-- IGV -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IGV (%)"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etIgv"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:background="@android:drawable/edit_text"
                            android:backgroundTint="#2C3139"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:hint="18.00"
                            android:textColorHint="#7F8C9A"
                            android:inputType="numberDecimal" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- DATOS DE SOLO LECTURA -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INFORMACIÓN DEL SISTEMA"
                    android:textColor="#7F8C9A"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.15"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#1E242A">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Fechas -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fecha Creación"
                                    android:textColor="#7F8C9A"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvFechaCreacion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2024-01-01"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Vencimiento"
                                    android:textColor="#7F8C9A"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvFechaVencimiento"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2025-01-01"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#2C3139"
                            android:layout_marginVertical="12dp" />

                        <!-- Plan y Usuarios -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tipo de Plan"
                                    android:textColor="#7F8C9A"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvTipoPlan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Premium"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fecha Corte"
                                    android:textColor="#7F8C9A"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvFechaCorte"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2024-12-01"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#2C3139"
                            android:layout_marginVertical="12dp" />

                        <!-- Usuarios -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Máx. Usuarios"
                                    android:textColor="#7F8C9A"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvMaxUsuarios"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Usuarios Activos"
                                    android:textColor="#7F8C9A"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvUsuariosActivos"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#2C3139"
                            android:layout_marginVertical="12dp" />

                        <!-- Espacio -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Espacio Total"
                                    android:textColor="#7F8C9A"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvEspacioTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1000 MB"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Espacio Usado"
                                    android:textColor="#7F8C9A"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvEspacioUsado"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="250 MB"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Botón Actualizar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnActualizar"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="GUARDAR CAMBIOS"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:icon="@android:drawable/ic_menu_save"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#2ECC71"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

            </LinearLayout>

        </ScrollView>

        <!-- ProgressBar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="#2ECC71" />

        <!-- Mensaje de Error -->
        <TextView
            android:id="@+id/tvMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cargando datos..."
            android:textColor="#7F8C9A"
            android:textSize="16sp"
            android:padding="20dp"
            android:gravity="center"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>