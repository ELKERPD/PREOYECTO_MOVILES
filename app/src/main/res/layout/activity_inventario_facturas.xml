<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnVolver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← Volver"
                android:textSize="14sp"
                android:backgroundTint="#6C757D" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Inventario de Facturas"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#212529"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="80dp"
                android:layout_height="0dp" />
        </LinearLayout>

        <!-- Estadísticas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ESTADÍSTICAS"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#007BFF"
                    android:layout_marginBottom="12dp" />

                <!-- Fila 1: Pendientes, Generadas, Enviadas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- Pendientes -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#FFF3CD"
                        android:padding="8dp"
                        android:layout_marginEnd="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pendientes"
                            android:textSize="10sp"
                            android:textColor="#856404"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvPendientes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FFA500" />

                        <TextView
                            android:id="@+id/tvTotalPendiente"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="S/ 0.00"
                            android:textSize="10sp"
                            android:textColor="#856404" />
                    </LinearLayout>

                    <!-- Generadas -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#D1ECF1"
                        android:padding="8dp"
                        android:layout_marginHorizontal="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Generadas"
                            android:textSize="10sp"
                            android:textColor="#0C5460"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvGeneradas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#17A2B8" />

                        <TextView
                            android:id="@+id/tvTotalGenerada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="S/ 0.00"
                            android:textSize="10sp"
                            android:textColor="#0C5460" />
                    </LinearLayout>

                    <!-- Enviadas -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#CCE5FF"
                        android:padding="8dp"
                        android:layout_marginStart="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Enviadas"
                            android:textSize="10sp"
                            android:textColor="#004085"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvEnviadas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#007BFF" />

                        <TextView
                            android:id="@+id/tvTotalEnviada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="S/ 0.00"
                            android:textSize="10sp"
                            android:textColor="#004085" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Fila 2: Aceptadas, Anuladas, Rechazadas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Aceptadas -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#D4EDDA"
                        android:padding="8dp"
                        android:layout_marginEnd="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Aceptadas"
                            android:textSize="10sp"
                            android:textColor="#155724"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvAceptadas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#28A745" />

                        <TextView
                            android:id="@+id/tvTotalAceptada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="S/ 0.00"
                            android:textSize="10sp"
                            android:textColor="#155724" />
                    </LinearLayout>

                    <!-- Anuladas -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#F8D7DA"
                        android:padding="8dp"
                        android:layout_marginHorizontal="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Anuladas"
                            android:textSize="10sp"
                            android:textColor="#721C24"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvAnuladas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#DC3545" />

                        <TextView
                            android:id="@+id/tvTotalAnulada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="S/ 0.00"
                            android:textSize="10sp"
                            android:textColor="#721C24" />
                    </LinearLayout>

                    <!-- Rechazadas -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#E2E3E5"
                        android:padding="8dp"
                        android:layout_marginStart="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rechazadas"
                            android:textSize="10sp"
                            android:textColor="#383D41"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvRechazadas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#6C757D" />

                        <TextView
                            android:id="@+id/tvTotalRechazada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="S/ 0.00"
                            android:textSize="10sp"
                            android:textColor="#383D41" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Filtros -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FILTROS"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#007BFF"
                    android:layout_marginBottom="12dp" />

                <!-- Buscar -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buscar (Nº Factura, Cliente, RUC)"
                    android:textSize="14sp"
                    android:textColor="#495057"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <EditText
                        android:id="@+id/etBuscar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Buscar..."
                        android:inputType="text"
                        android:padding="12dp"
                        android:background="@android:drawable/edit_text" />

                    <Button
                        android:id="@+id/btnBuscar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buscar"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#28A745" />
                </LinearLayout>

                <!-- Estado -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado"
                    android:textSize="14sp"
                    android:textColor="#495057"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spinnerEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@android:drawable/edit_text" />

                <!-- Fechas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Desde"
                            android:textSize="14sp"
                            android:textColor="#495057"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/etFechaDesde"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="YYYY-MM-DD"
                            android:inputType="date"
                            android:padding="12dp"
                            android:background="@android:drawable/edit_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hasta"
                            android:textSize="14sp"
                            android:textColor="#495057"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/etFechaHasta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="YYYY-MM-DD"
                            android:inputType="date"
                            android:padding="12dp"
                            android:background="@android:drawable/edit_text" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Botones de Filtro -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnLimpiar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Limpiar"
                        android:textSize="14sp"
                        android:backgroundTint="#6C757D"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnFiltrar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Filtrar"
                        android:textSize="14sp"
                        android:backgroundTint="#007BFF"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Lista de Facturas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LISTA DE FACTURAS"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#007BFF"
                    android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFacturas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="300dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Paginación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnAnterior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← Anterior"
                android:textSize="14sp"
                android:backgroundTint="#6C757D" />

            <TextView
                android:id="@+id/tvPaginaActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Página 1 de 1"
                android:textSize="14sp"
                android:textColor="#212529"
                android:layout_marginHorizontal="16dp" />

            <Button
                android:id="@+id/btnSiguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siguiente →"
                android:textSize="14sp"
                android:backgroundTint="#6C757D" />
        </LinearLayout>

        <!-- ProgressBar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>