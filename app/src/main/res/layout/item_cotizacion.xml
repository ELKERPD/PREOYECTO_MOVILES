<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- NÃºmero de cotizaciÃ³n -->
        <TextView
            android:id="@+id/tvNumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COT-2024-0001"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <!-- Cliente -->
        <TextView
            android:id="@+id/tvCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EMPRESA EJEMPLO S.A.C."
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="4dp"/>

        <!-- RUC -->
        <TextView
            android:id="@+id/tvRuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RUC: 20123456789"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp"/>

        <!-- Fecha -->
        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EmisiÃ³n: 2024-01-15"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp"/>

        <!-- Total -->
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: PEN 1,500.00"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#28A745"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PENDIENTE"
            android:textSize="12sp"
            android:textStyle="bold"
            android:padding="4dp"
            android:background="#8A4500"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"/>



        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnVerPdf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“„ Ver PDF"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#007BFF"/>

            <Button
                android:id="@+id/btnCambiarEstado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ”„ Cambiar Estado"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#FFC107"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>